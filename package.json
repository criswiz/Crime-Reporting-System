{
  "name": "police-complaint-app",
  "version": "1.0.0",
  "description": "Online platform to help citizens to file complaints easily and help the police to track and work on complaints easily",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
